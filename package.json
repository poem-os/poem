{
  "name": "poem-os",
  "version": "0.1.0",
  "type": "module",
  "description": "POEM - Prompt Orchestration and Engineering Method",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "poem-os": "./bin/install.js"
  },
  "files": [
    "bin/",
    "packages/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/appydave/poem-os.git"
  },
  "bugs": {
    "url": "https://github.com/appydave/poem-os/issues"
  },
  "homepage": "https://github.com/appydave/poem-os#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dev": "npm run dev --workspace=@poem-os/app",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.50.1"
  },
  "keywords": [
    "prompt-engineering",
    "ai",
    "llm",
    "handlebars",
    "mock-data"
  ],
  "author": "AppyDave",
  "license": "MIT"
}
